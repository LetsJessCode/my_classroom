<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :f_name, 'First Name' %><br />
    <%= f.text_field :f_name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :l_name, 'Last Name' %><br />
    <%= f.email_field :l_name, autocomplete: "name" %>

  </div>
  <div class="field">
    <%= f.label :age %><br />
    <%= f.text_field :age, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :grade %><br />
    <%= f.email_field :grade, autofocus: true, autocomplete: "email" %>
  </div>
    
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

